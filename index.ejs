<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="css/styles.css" />
  <title>Juego Futbol</title>
</head>

<body>
  <div class="canvas-container">
    <canvas id="canvas"></canvas>
  </div>

  <div class="game-container">
    <div class="d-flex">
      <div>
        <button class="btn btn-success" onclick="startCapture()">
          Cargar Fondo
        </button>
      </div>
      <div>
        <button class="btn btn-danger mx-3" onclick="startGame()">
          Iniciar Juego
        </button>
      </div>
    </div>
    <div class="stadium">
      <div id="visitant"></div>
      <div id="course" class="course"></div>
      <div id="local"></div>
    </div>
  </div>
  <div class="controls">
    <div class="keys">
      <div class="top-buttons">
        <div class="mx-2 mb-2">
          <button onclick="keyUp()">
            <img src="img/up-arrow.png" alt="up" width="50" height="50" />
          </button>
        </div>
      </div>
      <div class="bottom-buttons">
        <div class="mx-1">
          <button onclick="keyLeft()">
            <img src="img/left.png" alt="left" width="50" height="50" />
          </button>
        </div>
        <div class="mx-1">
          <button onclick="keyDown()">
            <img src="img/down-arrow.png" alt="down" width="50" height="50" />
          </button>
        </div>
        <div class="mx-1">
          <button onclick="keyRight()">
            <img src="img/right.png" alt="right" width="50" height="50" />
          </button>
        </div>
      </div>
    </div>
  </div>
  <div id="action-player" class="canvas-player-container">
    <canvas id="player"></canvas>
  </div>

  <!-- Capture Modal -->
  <div class="modal fade" id="captureModal" tabindex="-1" aria-labelledby="captureModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="captureModalLabel">Crear fondo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="video-wrap">
            <video id="video" playsinline autoplay></video>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancelar
          </button>
          <button id="snap" type="button" class="btn btn-primary">
            Guardar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Goal Modal -->
  <div class="modal fade" id="GoalModal" tabindex="-1" aria-labelledby="GoalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="GoalModalLabel">Has anotado un gol</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="d-flex justify-content-center">
            <img src="img/gol.png" alt="gol" height="400">
          </div>
        </div>
        <div class="modal-footer">
          <button id="snap" type="button" class="btn btn-primary" onclick="resetPlayer()">
            Aceptar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="js/jquery-3.6.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="js/main.js"></script>
</body>

</html>